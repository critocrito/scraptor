{
  "name": "scraptor",
  "version": "0.0.0",
  "description": "A scaffolding repository to start a new JS libraries for NodeJS or the browser.",
  "main": "_dist/main.js",
  "browser": "_dist/browser.js",
  "module": "lib/index.js",
  "config": {
    "srcDir": "lib",
    "testDir": "test",
    "distDir": "_dist",
    "reporter": "progress"
  },
  "scripts": {
    "build": "for i in lint test docs compile; do npm run $i -s; done",
    "lint": "for i in src docs; do npm run lint-$i -s; done",
    "test": "cross-env NODE_ENV=test mocha -c -r $npm_package_config_reporter --compilers js:babel-register -r source-map-support/register -r babel-polyfill -r test/helpers.js $npm_package_config_testDir/**/*.spec.js",
    "docs": "documentation lint $npm_package_config_srcDir/**/*.js && documentation readme --shallow --readme-file Readme.md -s \"API\" lib/**/*.js && doctoc --maxlevel 3 --notitle Readme.md",
    "precompile": "npm run clean -s",
    "compile": "rollup -c",
    "watch": "npm run test -- -w",
    "fix": "npm run lint -- --fix",
    "clean": "rimraf $npm_package_config_distDir",
    "coverage": "cross-env NODE_ENV=test nyc npm test",
    "check": "eslint --print-config .eslintrc.json | eslint-config-prettier-check",
    "release": "standard-version -i Changelog.md -m \"chore(release): Bumped to version %s.\" --sign",
    "release-candidate": "npm run release -- --prerelease \"rc\"",
    "prepublishOnly": "npm run build",
    "publish": "git push --follow-tags origin master",
    "lint-src": "eslint --cache $npm_package_config_testDir $npm_package_config_srcDir",
    "lint-docs": "documentation lint $npm_package_config_srcDir/**/*.js",
    "commitmsg": "validate-commit-msg"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/critocrito/scraptor.git"
  },
  "keywords": [],
  "author": "Christo <christo@cryptodrunks.net>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://gitlab.com/critocrito/scraptor/issues"
  },
  "homepage": "https://gitlab.com/critocrito/scraptor#Readme.md",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-plugin-transform-async-functions": "^6.22.0",
    "babel-plugin-transform-regenerator": "^6.24.1",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.24.1",
    "chai": "^4.1.0",
    "chai-as-promised": "^7.1.1",
    "cross-env": "^5.0.5",
    "doctoc": "^1.3.0",
    "documentation": "^5.0.1",
    "eslint": "^4.3.0",
    "eslint-config-airbnb-base": "^11.3.1",
    "eslint-config-prettier": "^2.3.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-lodash-fp": "^2.1.3",
    "eslint-plugin-prettier": "^2.1.2",
    "eslint-plugin-promise": "^3.5.0",
    "husky": "^0.14.3",
    "jsverify": "^0.8.2",
    "lodash": "^4.17.4",
    "mocha": "^3.4.2",
    "nyc": "^11.1.0",
    "prettier": "^1.5.3",
    "rimraf": "^2.6.1",
    "rollup": "^0.48.2",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-commonjs": "^8.2.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-uglify": "^2.0.1",
    "sinon": "^3.2.1",
    "source-map-support": "^0.4.16",
    "standard-version": "^4.2.0",
    "validate-commit-msg": "^2.13.1"
  }
}
